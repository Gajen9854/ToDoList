                        <script>
                            function checkBox() {
                                const checkbox = document.querySelectorAll(".checkbox");
                                for (let i = 0; i < checkbox.length; i++) {
                                    const check = document.querySelectorAll(".checkbox")[i];
                                    if (check.checked) {
                                        document.getElementsByClassName("delete")[i].classList.add("del");

                                    } else {
                                        document.getElementsByClassName("delete")[i].classList.remove("del");
                                    }
                                }
                            }
